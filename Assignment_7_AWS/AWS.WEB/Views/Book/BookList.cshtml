@model IEnumerable<AWS.Domain.Book>

<!DOCTYPE html>
<html>
<head>
    <title>Book List</title>
    <link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#bookTable').DataTable({
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": "/Book/LoadBookData",
                    "type": "POST"
                },
                "columns": [
                    { "data": "bookId" },
                    { "data": "title" }, 
                    { "data": "author" },
                    {
                        "render": function (data, type, row) {
                            return '<a title="Edit this Item" href="/Book/EditBook/' + row.bookId + '" class="btn btn-outline-warning btn-sm">Edit</a>' +
                                '<form method="post" action="/Book/Delete/' + row.bookId + '" class="btn-group" style="margin-left: 5px;">' +
                                '<button type="submit" class="btn btn-danger">Delete</button>' +
                                '</form>';
                        }
                    }
                ]
            });
        });
    </script>


</head>
<body>
    <div class="container">
        <h1>List of Books</h1>
        <a href="/Book/CreateBook" class="btn btn-primary mb-3">Add New Book</a>
        <table id="bookTable" class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</body>
</html>
